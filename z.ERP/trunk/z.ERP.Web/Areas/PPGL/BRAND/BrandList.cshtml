@using z.ERP.Web.Areas.Layout.Search
@inherits SearchViewBase

@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.ID" />
        </i-col>
        <i-col span="2" class="RowTitle">
            名称
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.NAME" />
        </i-col>
        <i-col span="2" class="RowTitle">
            业态
        </i-col>
        <i-col span="6" class="RowText">
            <yx-cascader v-bind:value.sync="searchParam.CATEGORY" method="GetTreeCategory"
                         v-on:change="cateChange" notlevellast></yx-cascader>
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            地址
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.ADRESS" />
        </i-col>
        <i-col span="2" class="RowTitle">
            联系人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.CONTACTPERSON" />
        </i-col>
        <i-col span="2" class="RowTitle">
            电话
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.PHONENUM" />
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            邮编
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.PIZ" />
        </i-col>
        <i-col span="2" class="RowTitle">
            微信
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.WEIXIN" />
        </i-col>
        <i-col span="2" class="RowTitle">
            QQ
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.QQ" />
        </i-col>
    </row>
}