@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Edit;
@using z.ERP.Entities;
@using z.ERP.Model;
@using z.Extensions;
@inherits EditViewBase<string>

@section baseParam{
    <row>
        <i-col span="2" class="RowTitle">
            抄表日期
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "dataParam.CHECK_DATE",
                    Id="ckdate",
                });

            }
        </i-col>
        <i-col span="2" class="RowTitle">
            年月
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.YEARMONTH",
                    Id = "tdny",
                });

            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            描述
        </i-col>
        <i-col span="14" class="RowText">
            @{ 
                RenderControl(new TextBoxRender()
                {
                    vModel= "dataParam.DESCRIPTION",
                    Id = "tdbz",
                });
            }
        </i-col>
    </row>

}

@section detailParam{
    <row v-if="disabled">
        <i-button type="primary" v-on:click="screenParam.addCol">选择</i-button>
        <i-button type="error" v-on:click="delCol">删除</i-button>
    </row>
    <row>
        <i-col span="24">
            <yx-table v-bind:columns="screenParam.colDef" v-bind:height="300" selection
                      v-bind:data="dataParam.ENERGY_REGISTER_ITEM" v-bind:disabled="!disabled" ref="refGroup">
        </i-col>
    </row>
}