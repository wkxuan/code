@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">单号</i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.BILLID" />
        </i-col>
        <i-col span="2" class="RowTitle">门店</i-col>
        <i-col span="6" class="RowText">
            <yx-select v-bind:value.sync="searchParam.BRANCHID" method="branch"></yx-select>
        </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<普通单据状态>()
                {
                    vModel = "searchParam.STATUS",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            债权发生月
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="month" v-bind:value.sync="searchParam.NIANYUE_START"></yx-date-picker>
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="month" v-bind:value.sync="searchParam.NIANYUE_END"></yx-date-picker>
        </i-col>
        <i-col span="2" class="RowTitle">
            登记人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.REPORTER_NAME" v-on:on-click="SelReporter" />
        </i-col>
        <i-col span="2" class="RowTitle">
            登记时间
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="date" v-bind:value.sync="searchParam.REPORTER_TIME_START"></yx-date-picker>
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="date" v-bind:value.sync="searchParam.REPORTER_TIME_END"></yx-date-picker>
        </i-col>       
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            收付实现月
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="month" v-bind:value.sync="searchParam.YEARMONTH_START"></yx-date-picker>
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="month" v-bind:value.sync="searchParam.YEARMONTH_END"></yx-date-picker>
        </i-col>
        <i-col span="2" class="RowTitle">
            审核人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.VERIFY_NAME" v-on:on-click="SelVerify" />
        </i-col>
        <i-col span="2" class="RowTitle">
            审核时间
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="date" v-bind:value.sync="searchParam.VERIFY_TIME_START"></yx-date-picker>
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="date" v-bind:value.sync="searchParam.VERIFY_TIME_END"></yx-date-picker>
        </i-col>
    </row>
}
