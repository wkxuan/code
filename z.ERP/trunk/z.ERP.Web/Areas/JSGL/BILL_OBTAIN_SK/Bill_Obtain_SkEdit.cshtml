@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Edit;
@using z.ERP.Entities;
@inherits EditViewBase<string>
@section baseParam{
    <row>
        <i-col span="2" class="RowTitle">
            <span class="mustElement">*</span>
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly v-bind:icon="disabled? 'md-search':''"
                     v-model="dataParam.MERCHANTNAME" v-on:on-click="SelMerchant" v-on:on-change="balance" v-bind:disabled="!disabled" />
        </i-col>
        <i-col span="2" class="RowTitle">
            <span class="mustElement">*</span>
            收费单位
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DropDownListsRender()
                {
                    vModel = "dataParam.FEE_ACCOUNT_ID",
                    Data = "screenParam.FEE_ACCOUNT",
                    EmptyText = "",
                    Enable = true,
                    Change = "balance",
                });
            }

        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            收款年月
        </i-col>
        <i-col span="6" class="RowText">
            <yx-date-picker type="month" v-bind:value.sync="dataParam.NIANYUE" v-bind:disabled="!disabled"></yx-date-picker>
        </i-col>
        <i-col span="2" class="RowTitle">
            商户余额
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly v-model="dataParam.MERCHANT_MONEY" v-bind:disabled="!disabled" />
        </i-col>
        <i-col span="2" class="RowTitle">
            付款方式
        </i-col>
        <i-col span="6" class="RowText">
            <yx-select v-bind:value.sync="dataParam.FKFSID" method="fkfs" v-bind:disabled="!disabled"></yx-select>
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            付款金额
        </i-col>
        <i-col span="6" class="RowText">
            <i-input  v-model="dataParam.ALL_MONEY" v-bind:disabled="!disabled" />
        </i-col>
        <i-col span="2" class="RowTitle">
            冲销预付款
        </i-col>
        <i-col span="6" class="RowText">
            <i-input  v-model="dataParam.ADVANCE_MONEY" v-on:on-change="YfkChange" type="number" v-bind:disabled="!disabled" />
        </i-col>
        &nbsp;&nbsp;付款金额 + 冲销预付款金额 = 明细付款金额之和
    </row>

    <row>
        <i-col span="2" class="RowTitle">
            备注
        </i-col>
        <i-col span="22" class="RowText">
            <i-input  v-model="dataParam.DESCRIPTION" v-bind:disabled="!disabled" />
        </i-col>
    </row>
}
@section detailParam{
<row>
    <i-col span="24">
        <Card v-bind:padding=0>
            <p slot="title">账单</p>
            <div slot="extra" v-show="disabled">
                <i-button type="primary" v-on:click="SelBill">选择</i-button>
                <i-button type="error" v-on:click="delBill">删除</i-button>
            </div>
            <yx-table v-bind:columns="screenParam.colDef" v-bind:height="300" selection
                      v-bind:data="dataParam.BILL_OBTAIN_ITEM" v-bind:disabled="!disabled" ref="refBill">
            </yx-table>
        </Card>
    </i-col>
</row>
<row>
    <i-col span="24">
        <Card v-bind:padding=0>
            <p slot="title">发票</p>
            <div slot="extra" v-show="disabled">
                <i-button type="primary" v-on:click="SelInvoice">选择</i-button>
                <i-button type="error" v-on:click="delInvoice">删除</i-button>
            </div>
            <yx-table v-bind:columns="screenParam.colDefI" v-bind:height="300" selection
                      v-bind:data="dataParam.BILL_OBTAIN_INVOICE" v-bind:disabled="!disabled" ref="refINVOICE">
            </yx-table>
        </Card>
    </i-col>
</row>
}

@section pops{
    @{
        RenderControl(new PopsRender()
        {
            vModel = "screenParam.showPopBill",
            Caption = "选择账单",
            Width = "900",
            Src = "screenParam.srcPopBill"
        });
    }
    @{
        RenderControl(new PopsRender()
        {
            vModel = "screenParam.showPopMerchant",
            Caption = "选择商户",
            Width = "900",
            Src = "screenParam.srcPopMerchant"
        });
    }
    @{
        RenderControl(new PopsRender()
        {
            vModel = "screenParam.showPopInvoice",
            Caption = "选择发票",
            Width = "900",
            Src = "screenParam.srcPopInvoice"
        });
    }
}

