@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">单号</i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.BILLID" />
        </i-col>
        <i-col span="2" class="RowTitle">门店</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<普通单据状态>()
                {
                    vModel = "searchParam.STATUS",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.MERCHANTNAME" v-on:on-click="SelMerchant" />
        </i-col>
        <i-col span="2" class="RowTitle">
            租约
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.CONTRACTID" v-on:on-click="SelContract" />
        </i-col>
        <i-col span="2" class="RowTitle">
            类型
        </i-col>
        <i-col span="6"  class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<通知单类型>()
                {
                    vModel = "searchParam.TYPE",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            登记人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.REPORTERNAME" v-on:on-click="SelReporter" />
        </i-col>
        <i-col span="2" class="RowTitle">
            登记时间
        </i-col>
        <i-col span="3"  class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.REPORTER_TIME_START"
                });
            }
        </i-col>
        <i-col span="3"  class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.REPORTER_TIME_END"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            年月
        </i-col>
        <i-col span="3"  class="RowText">
            <yx-year-month-picker v-bind:value.sync="searchParam.NIANYUE_START"></yx-year-month-picker>
        </i-col>
        <i-col span="3" class="RowText">
            <yx-year-month-picker v-bind:value.sync="searchParam.NIANYUE_END"></yx-year-month-picker>
        </i-col>

    </row>
    <row>
        <i-col span="2" class="RowTitle">
            审核人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.VERIFYNAME" v-on:on-click="SelVerify" />
        </i-col>
        <i-col span="2" class="RowTitle">
            审核时间
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.VERIFY_TIME_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.VERIFY_TIME_END"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            收费单位
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.FEE_ACCOUNTID",
                    ServiceMothod = m => m.feeAccount()
                });
            }
        </i-col>
    </row>
}