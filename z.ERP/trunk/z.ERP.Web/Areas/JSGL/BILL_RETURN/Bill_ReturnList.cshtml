@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">单号</i-col>
        <i-col span="6" class="RowText">
            <i-input clearable v-model="searchParam.BILLID"  />
        </i-col>
        <i-col span="2" class="RowTitle">门店</i-col>
        <i-col span="6" class="RowText">
            <yx-select v-bind:value.sync="searchParam.BRANCHID" method="branch"></yx-select>
        </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<普通单据状态>()
                {
                    vModel = "searchParam.STATUS",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search"
                     v-model="searchParam.MERCHANTNAME" v-on:on-click="SelMerchant" />
        </i-col>
        <i-col span="2" class="RowTitle">
            租约
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search"
                     v-model="searchParam.CONTRACTID" v-on:on-click="SelContract" />
        </i-col>
        <i-col span="2" class="RowTitle">备注</i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.DESCRIPTION" clearable />
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            登记人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.REPORTERNAME" v-on:on-click="SelReporter" />
        </i-col>
        <i-col span="2" class="RowTitle">
            登记时间
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.REPORTER_TIME_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.REPORTER_TIME_END"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            审核人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.VERIFYNAME" v-on:on-click="SelVerify" />
        </i-col>
        <i-col span="2" class="RowTitle">
            审核时间
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.VERIFY_TIME_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.VERIFY_TIME_END"
                });
            }
        </i-col>
    </row>
}