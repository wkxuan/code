@inherits ViewBase<DefineNewRender>
@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Web.Areas.Layout.DefineNew
@using z.MVC5.Views
@{
    Layout = ThisLayout;
}
@{
    WebFiles = new string[] {
                    "Areas/Layout/DefineNew/DefineStyle.css",
                    "Areas/Layout/DefineNew/_DefineLayout.js"
                };
}
@section head{
    @InitFiles(WebFiles)
    @RenderSection("head", false)
}

<div id="defineNew">
    <collapse v-model="panelName">
        <panel name="condition">
            查询条件
            <div style="float: right; width: 400px ;text-align: right;">
                <i-button type="text" shape="circle" icon="md-search" v-on:click="seach">查询</i-button>
                <i-button type="text" shape="circle" icon="md-refresh" v-on:click="clear">清空</i-button>
                <i-button type="text" shape="circle" icon="md-add" v-on:click="add">新增</i-button>
                <i-button type="text" shape="circle" icon="md-trash" v-on:click="del">删除</i-button>

                @RenderSection("conditionBtn", false)
            </div>
            <div slot="content" class="searchParamContent">
                @*查询条件*@
                @RenderSection("conditionParam", true)
            </div>
        </panel>
        <panel name="result">
            查询结果
            <div style="float: right;width: 400px ;text-align: right;">             
                @RenderSection("resultBtn", false)
            </div>
            <div slot="content">
                @*结果显示*@
                <yx-table v-bind:columns="columns" v-bind:data="data"  selection=true
                          v-bind:loading="tbLoading" ref="selectData">
                </yx-table>
                <page v-bind:total="pagedataCount" v-bind:page-size="pageSize" show-total 
                      v-bind:current="currentPage"
                      v-on:on-change="changePageCount" v-bind:page-size-opts="arrPageSize"
                      show-sizer v-on:on-page-size-change="changePageSizer"></page>
                @RenderSection("resultOthers", false)
            </div>
        </panel>
    </collapse>

    <div class="hide">
        @RenderSection("hide", false)
        @RenderSection("pops", false)
    </div>
</div>


@section foot{
    @RenderSection("foot", false)
}