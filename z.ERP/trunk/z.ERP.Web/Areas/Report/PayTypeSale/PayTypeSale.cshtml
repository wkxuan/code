@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum;
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase

@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            查询类型
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<列表或汇总>()
                {
                    vModel = "searchParam.SrchTYPE",
                    Change = "changeSrchType",
                    EmptyText = "普通列表"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            门店
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                    Multiple = true
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.MERCHANTNAME" v-on:on-click="SelMerchant" />
        </i-col>       
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            品牌
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.BRANDNAME" v-on:on-click="SelBrand" />
        </i-col>
        <i-col span="2" class="RowTitle">
            收款方式
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.Pay",
                    ServiceMothod = m => m.pay(),
                    Multiple = true
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            销售日期
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.RQ_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.RQ_END"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            销售年月
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new YearMonthBoxRender()
                {
                    vModel = "searchParam.YEARMONTH_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new YearMonthBoxRender()
                {
                    vModel = "searchParam.YEARMONTH_END"
                });
            }
        </i-col>
    </row>
}
@section panelTwoContent{
    <row>
        <i-col span="24">
            <yx-echart-bar v-bind:data="screenParam.echartData" v-bind:value="screenParam.echartRadioVal"
                           v-bind:enumlist="screenParam.echartType" v-bind:sumlist="screenParam.dataSumTypeList" ref="echartRef">
            </yx-echart-bar>         
        </i-col>
    </row>
}