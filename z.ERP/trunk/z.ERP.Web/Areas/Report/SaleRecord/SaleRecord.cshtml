@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum;
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            门店
        </i-col>
        <i-col span="6" class="RowText">
            <yx-select v-bind:value.sync="searchParam.BRANCHID" method="branch" multiple></yx-select>
        </i-col>
        <i-col span="2" class="RowTitle">
            终端号
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.POSNO"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            交易时间
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.SALE_TIME_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.SALE_TIME_END"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.MERCHANTNAME" v-on:on-click="SelMerchant" />
        </i-col>
        <i-col span="2" class="RowTitle">
            店铺
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.SHOPNAME" v-on:on-click="SelShop" />
        </i-col>
        <i-col span="2" class="RowTitle">
            记账日期
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.ACCOUNT_DATE_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.ACCOUNT_DATE_END"
                });
            }
        </i-col>
    </row>
}
@section panelTwoContent{
    <row>
        <i-col span="24">
            <yx-echart-bar v-bind:data="screenParam.echartData" v-bind:value="screenParam.echartRadioVal" 
                       v-bind:enumlist="screenParam.echartType" v-bind:sumlist="screenParam.dataSumTypeList" ref="echartRef">
            </yx-echart-bar>         
        </i-col>
    </row>
}