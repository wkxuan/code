@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum;
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase

@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            查询类型
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<租金收取方式>()
                {
                    vModel = "searchParam.SrchTYPE",
                    Change = "changeSrchType",
                    EmptyText = "提成租金"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            门店
        </i-col>
        <i-col span="6" class="RowText">
            <yx-select v-bind:value.sync="searchParam.BRANCHID" method="branch" multiple></yx-select>
        </i-col>
        <i-col span="2" class="RowTitle">
            年月
        </i-col>
        <i-col span="3" class="RowText">
            <yx-year-month-picker v-bind:value.sync="searchParam.NIANYUE_START"></yx-year-month-picker>
        </i-col>
        <i-col span="3" class="RowText">
            <yx-year-month-picker v-bind:value.sync="searchParam.NIANYUE_END"></yx-year-month-picker>
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.MERCHANTNAME" v-on:on-click="SelMerchant" />
        </i-col>
        <i-col span="2" class="RowTitle">
            品牌
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.BRANDNAME" v-on:on-click="SelBrand" />
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            业态
        </i-col>
        <i-col span="6" class="RowText">
            <yx-cascader v-bind:value.sync="searchParam.CATEGORY" method="GetTreeCategory"
                         v-on:change="changeCate" notlevellast></yx-cascader>
        </i-col>
        <i-col span="2" class="RowTitle">
            楼层
        </i-col>
        <i-col span="6" class="RowText">
            <yx-select v-bind:value.sync="searchParam.FLOORID" method="floor" multiple></yx-select>
        </i-col>
    </row>
}