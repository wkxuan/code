@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum;
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase

@section conditionParam{

    <row>
        <i-col span="2" class="RowTitle">门店</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                    Multiple = true
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.MERCHANTNAME" v-on:on-click="SelMerchant" />
        </i-col>

        <i-col span="2" class="RowTitle">
            租约
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.CONTRACTID" v-on:on-click="SelContract" />
        </i-col>

    </row>

    <row>
        <i-col span="2" class="RowTitle">账单号</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.BILLID",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">账单类型</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<账单类型>()
                {
                    vModel = "searchParam.TYPE",
                    Multiple = true

                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">账单状态</i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<账单状态>()
                {
                    vModel = "searchParam.STATUS",
                    Multiple = true
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="2" class="RowTitle">收费项目</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.TRIMID",
                    ServiceMothod = m => m.feesubject(),
                    Multiple = true
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            收付实现月
        </i-col>
        <i-col span="3" class="RowText">
            <yx-year-month-picker v-bind:value.sync="searchParam.YEARMONTH_START"></yx-year-month-picker>
        </i-col>
        <i-col span="3" class="RowText">
            <yx-year-month-picker v-bind:value.sync="searchParam.YEARMONTH_END"></yx-year-month-picker>
        </i-col>
        <i-col span="2" class="RowTitle">
            债权发生月
        </i-col>
        <i-col span="3" class="RowText">
            <yx-year-month-picker v-bind:value.sync="searchParam.NIANYUE_START"></yx-year-month-picker>
        </i-col>
        <i-col span="3" class="RowText">
            <yx-year-month-picker v-bind:value.sync="searchParam.NIANYUE_END"></yx-year-month-picker>
        </i-col>
    </row>

    <row>
        <i-col span="2" class="RowTitle">
            业态
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new CascaderRender()
                {
                    vModel = "screenParam.CATEGORY",
                    Data = "screenParam.CATEData",
                    Change = "changeCate",
                    Not_level_last = true
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            楼层
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.FLOORID",
                    ServiceMothod = m => m.floor(),
                    Multiple = true
                });
            }
        </i-col>
    </row>
}