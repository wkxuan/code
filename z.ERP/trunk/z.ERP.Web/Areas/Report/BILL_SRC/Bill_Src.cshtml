@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum;
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase

@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">门店</i-col>
        <i-col span="6" class="RowText">
            <yx-select v-bind:value.sync="searchParam.BRANCHID" method="branch" multiple></yx-select>
        </i-col>
        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.MERCHANTNAME" v-on:on-click="SelMerchant" />
        </i-col>
        <i-col span="2" class="RowTitle">
            租约
        </i-col>
        <i-col span="6" class="RowText">
            <i-input icon="md-search" v-model="searchParam.CONTRACTID" v-on:on-click="SelContract" />
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">账单号</i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.BILLID" />
        </i-col>
        <i-col span="2" class="RowTitle">账单类型</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<账单类型>()
                {
                    vModel = "searchParam.TYPE",
                    Multiple = true

                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">账单状态</i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<账单状态>()
                {
                    vModel = "searchParam.STATUS",
                    Multiple = true
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">收费项目</i-col>
        <i-col span="6" class="RowText">
            <yx-select v-bind:value.sync="searchParam.TRIMID" method="feesubject" multiple></yx-select>
        </i-col>
        <i-col span="2" class="RowTitle">
            收付实现月
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="month" v-bind:value.sync="searchParam.YEARMONTH_START"></yx-date-picker>
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="month" v-bind:value.sync="searchParam.YEARMONTH_END"></yx-date-picker>
        </i-col>
        <i-col span="2" class="RowTitle">
            债权发生月
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="month" v-bind:value.sync="searchParam.NIANYUE_START"></yx-date-picker>
        </i-col>
        <i-col span="3" class="RowText">
            <yx-date-picker type="month" v-bind:value.sync="searchParam.NIANYUE_END"></yx-date-picker>
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            业态
        </i-col>
        <i-col span="6" class="RowText">
            <yx-cascader v-bind:value.sync="searchParam.CATEGORY" method="GetTreeCategory"
                         v-on:change="changeCate" notlevellast></yx-cascader>
        </i-col>
        <i-col span="2" class="RowTitle">
            楼层
        </i-col>
        <i-col span="6" class="RowText">
            <yx-select v-bind:value.sync="searchParam.FLOORID" method="floor" multiple></yx-select>
        </i-col>
    </row>
}