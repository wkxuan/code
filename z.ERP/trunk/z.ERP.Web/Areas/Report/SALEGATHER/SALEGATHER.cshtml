@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum;
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            门店
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),

                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            交易时间
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.SALETIME_START",

                });
            }
        </i-col>

        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.SALETIME_END"
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            上传时间
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.CREATE_TIME_START",

                });
            }
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.CREATE_TIME_END"
                });
            }
        </i-col>

    </row>
    <row>
        <i-col span="2" class="RowTitle">
            终端号
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.STATIONBH",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            交易号
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.DEALID",
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            处理标记
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<处理标记>()
                {
                    vModel = "searchParam.FLAG",
                    Multiple =true
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            失败原因
        </i-col>
        <i-col span="14" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.REASON",
                });
            }
        </i-col>

    </row>
}