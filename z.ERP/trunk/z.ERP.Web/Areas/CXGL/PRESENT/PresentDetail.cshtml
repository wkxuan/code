@using z.ERP.Web.Areas.Layout.DefineDetail
@inherits DefineDetailViewBase

@section baseParam{
    <row>
        <i-col span="5" class="RowTitle">
            门店
        </i-col>
        <i-col span="17" class="RowText">
            <yx-select v-bind:value.sync="dataParam.BRANCHID" method="branch" v-bind:disabled="disabled"></yx-select>
        </i-col>
    </row>
    <row>
        <i-col span="5" class="RowTitle">
            赠品编号
        </i-col>
        <i-col span="17" class="RowText">
            <i-input v-model="dataParam.ID" disabled />
        </i-col>
    </row>
    <ROW>
        <i-col span="5" class="RowTitle">
            赠品名称
        </i-col>
        <i-col span="17" class="RowText">
            <i-input v-model="dataParam.NAME" v-bind:disabled="disabled" />
        </i-col>
    </ROW>
    <row>
        <i-col span="5" class="RowTitle">
            价格
        </i-col>
        <i-col span="17" class="RowText">
            <i-input type = "number" v-model="dataParam.PRICE" v-bind:disabled="disabled" />
        </i-col>
    </row>
    <row>
        <i-col span="5" class="RowTitle">
            状态
        </i-col>
        <i-col span="17" class="RowText">
            <i-input v-model="dataParam.STATUSMC" disabled />
        </i-col>
    </row>
}
