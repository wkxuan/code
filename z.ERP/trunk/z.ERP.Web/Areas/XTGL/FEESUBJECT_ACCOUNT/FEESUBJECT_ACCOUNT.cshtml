@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Define
@inherits DefineViewBase

@section search{
    <row>
        <i-col span="5" class="RowTitle">门店</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DropDownListsRender()
                {
                    vModel = "searchParam.BRANCHID",
                    Data = "screenParam.branchData",
                    EmptyText = "",
                    Change = "branchChange",
                });
            }
        </i-col>

        <i-col span="5" class="RowTitle">
            代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.TRIMID" />
        </i-col>
    </row>
}

@section element{
    <row>
        <i-col span="5" class="RowTitle">
            <span class="mustElement">*</span>
            费用项目
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly v-bind:icon="!disabled? 'md-search':''"
                     v-model="dataParam.TERMNAME" v-on:on-click="srchFeeSubject" v-bind:disabled="disabled" />
        </i-col>
    </row>
    <row>
        <i-col span="5" class="RowTitle">
            <span class="mustElement">*</span>
            收费单位
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DropDownListsRender()
                {
                    vModel = "dataParam.FEE_ACCOUNTID",
                    Data = "screenParam.FEE_ACCOUNTData",
                    EmptyText = "",
                    Enable = false,
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="5" class="RowTitle">
            <span class="mustElement">*</span>
            通知单生成方式
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<通知单生成方式>()
                {
                    vModel = "dataParam.NOTICE_CREATE_WAY",
                    Enable = false
                });
            }
        </i-col>
    </row>
}










