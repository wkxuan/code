@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Web.Areas.Layout.Define
@using z.ERP.Entities.Enum
@inherits DefineViewBase

@section element{
    <row>
        <i-col  span="4" class="RowTitle">
            滞纳规则代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.ID" disabled></i-input>
        </i-col>
    </row>
    <row>
        <i-col span="4" class="RowTitle">
            <span class="mustElement">*</span>
            滞纳规则名称
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.NAME" v-bind:disabled="disabled"></i-input>
        </i-col>
    </row>
    <row>
        <i-col span="4" class="RowTitle">
            <span class="mustElement">*</span>
            滞纳金比例(%/天)
        </i-col>
        <i-col span="6" class="RowText">
            <i-input type="number" v-model="dataParam.RATIO" v-bind:disabled="disabled"></i-input>
        </i-col>
    </row>
    <row>
        <i-col span="4" class="RowTitle">
            <span class="mustElement">*</span>
            宽限天数
        </i-col>
        <i-col span="6" class="RowText">
            <i-input type="number" v-model="dataParam.DAYS" v-bind:disabled="disabled"></i-input>
        </i-col>
    </row>
    <row>
        <i-col span="4" class="RowTitle">
           <span class="mustElement">*</span> 
            宽限金额
        </i-col>
        <i-col span="6" class="RowText">
            <i-input type="number" v-model="dataParam.AMOUNTS" v-bind:disabled="disabled"></i-input>
        </i-col>
    </row> 
}