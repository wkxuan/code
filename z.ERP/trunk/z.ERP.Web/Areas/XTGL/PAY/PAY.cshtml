@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Define
@inherits DefineViewBase


@section element{
    <row>
        <i-col span="3" class="RowTitle">
            代码
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.PAYID"
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            名称
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.NAME",
                    Enable = false
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            类型
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<支付方式类型>()
                {
                    vModel = "dataParam.TYPE",
                    Enable = false
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            返款
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<收款方式返款>()
                {
                    vModel = "dataParam.FK",
                    Enable = false
                });
            }
        </i-col>

        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            积分
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<收款方式积分>()
                {
                    vModel = "dataParam.JF",
                    Enable = false
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            找零方式
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<收款方式找零方式>()
                {
                    vModel = "dataParam.ZLFS",
                    Enable = false
                });
            }
        </i-col>

        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            显示序号
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.FLAG",
                    Enable = false
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="3" class="RowTitle">
            优惠券
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "dataParam.COUPONID",                   
                    ServiceMothod = m => m.coupon(),
                    Enable = false,
                });
            }
        </i-col>

        <i-col span="3" class="RowTitle">
            停用标记
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumCheckBoxListRender<停用标记>()
                {
                    vModel = "dataParam.VOID_FLAG",
                    MultiSelect = false,
                    Enable = false
                });
            }
        </i-col>
    </row>

}

@section search{
    <row>
        <i-col span="3" class="RowTitle">
            代码
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.PAYID",
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            名称
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.NAME"
                });
            }
        </i-col>
    </row>
}