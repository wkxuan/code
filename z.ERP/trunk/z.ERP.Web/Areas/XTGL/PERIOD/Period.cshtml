@using z.ERP.Web.Areas.Layout.Define
@inherits DefineViewBase

@section element{
    <row>
        <i-col span="5" class="RowTitle">年度</i-col>
        <i-col span="8" class="RowText">
            <i-select v-model="searchParam.YEAR" v-on:on-change="getPeriod" v-bind:disabled="!disabled">
                <i-option v-for="item in screenParam.nyList" v-bind:value="item.value">{{ item.label }}</i-option>
            </i-select>
        </i-col>
    </row>
    <row>
        <i-col span="5" class="RowTitle">每月结束日</i-col>
        <i-col span="8" class="RowText">
            <i-input type="number" v-model="screenParam.LASTDAY" v-bind:disabled="disabled" v-on:on-change="lastdayChange"/>
        </i-col>
    </row>
    <row>
        <i-col span="5" class="RowTitle"></i-col>
        <i-col span="8" class="RowText">
            <Checkbox v-model="screenParam.Natrual" v-on:on-change="natrualChange" v-bind:disabled="disabled">自然月</Checkbox>
        </i-col>
    </row>
}
