@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase

@section conditionParam{
    <row>
        <i-col span="3" class="RowTitle">
            门店
        </i-col>
        <i-col span="5" class="RowText">
            <yx-select v-bind:value.sync="searchParam.BRANCHID" method="branch"></yx-select>
        </i-col>
        <i-col span="3" class="RowTitle">
            终端号
        </i-col>
        <i-col span="5" class="RowText">
            <i-input v-model="searchParam.STATIONBH" />
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">
            收银员
        </i-col>
        <i-col span="5" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.USERNAME" v-on:on-click="srchUser"/>
        </i-col>
        <i-col span="3" class="RowTitle">
            店铺
        </i-col>
        <i-col span="5" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.SHOPCODE" v-on:on-click="SelShop" />
        </i-col>
    </row>
}