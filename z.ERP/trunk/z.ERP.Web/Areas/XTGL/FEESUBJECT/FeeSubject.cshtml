@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Define
@inherits DefineViewBase


@section element{
    <row>
        <i-col span="3" class="RowTitle">
            代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.TRIMID" disabled></i-input>
        </i-col>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            名称
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.NAME" v-bind:disabled="disabled"></i-input>
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">拼音码</i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.PYM" v-bind:disabled="disabled"></i-input>
        </i-col>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            项目类型
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<收费项目类型>()
                {
                    vModel = "dataParam.TYPE",
                    Enable = false,
                });
            }
        </i-col>
    </row>
    <row>
        @*<i-col span="3" class="RowTitle">
                <span class="mustElement">*</span>
                成本费用
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new EnumDropDownListRender<收费项目成本费用>()
                    {
                        vModel= "dataParam.ACCOUNT",
                        Enable=false
                    });
                }
            </i-col>*@

        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            现金货扣
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<收费项目现金货扣>()
                {
                    vModel = "dataParam.DEDUCTION",
                    Enable = false
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            科目代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.SUBJECT_CODE" v-bind:disabled="disabled"></i-input>
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">通知单生成方式</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<通知单生成方式>()
                {
                    vModel = "dataParam.SCFS_TZD",
                    Enable = false
                });
            }
        </i-col>

        <i-col span="3" class="RowTitle">使用标记</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<停用标记>()
                {
                    vModel = "dataParam.VOID_FLAG",
                    Enable = false
                });
            }
        </i-col>
    </row>
}

@section search{
    <row>
        <i-col span="3" class="RowTitle">
            代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.TRIMID"></i-input>
        </i-col>
        <i-col span="3" class="RowTitle">
            名称
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.NAME"></i-input>
        </i-col>
    </row>
}

