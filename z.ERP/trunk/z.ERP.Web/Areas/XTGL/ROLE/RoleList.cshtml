@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>        
        <i-col span="2" class="RowTitle">所属机构</i-col>
        <i-col span="6" class="RowText">
            <yx-cascader v-bind:value.sync="searchParam.ORGData" method="GetTreeOrg" notlevellast
                         v-on:change="orgChange"></yx-cascader>
        </i-col>
        <i-col span="2" class="RowTitle">
            角色代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.ROLECODE"/>
        </i-col>
        <i-col span="2" class="RowTitle">角色名称</i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.ROLENAME" />
        </i-col>
    </row>
}
