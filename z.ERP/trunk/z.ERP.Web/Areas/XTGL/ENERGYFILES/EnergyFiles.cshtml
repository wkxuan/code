@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Define
@inherits DefineViewBase

@section element{
    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            设备代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.FILECODE" v-bind:disabled="disabled" />
        </i-col>
        <i-col span="4" class="RowTitle">
            <span class="mustElement">*</span>
            设备名称
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.FILENAME" v-bind:disabled="disabled" />
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            单元
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly v-bind:icon="!disabled? 'md-search':''"
                     v-model="dataParam.SHOPCODE" v-on:on-click="SelShop" v-bind:disabled="disabled" />
        </i-col>
        <i-col span="4" class="RowTitle">
            出厂日期
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "dataParam.FACTORY_DATE",
                    Enable = false
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            单价
        </i-col>
        <i-col span="6" class="RowText">
            <i-input type="number" v-model="dataParam.PRICE" v-bind:disabled="disabled" />
        </i-col>
        <i-col span="4" class="RowTitle">
            <span class="mustElement">*</span>
            倍率
        </i-col>
        <i-col span="6" class="RowText">
            <i-input type="number" v-model="dataParam.MULTIPLE" v-bind:disabled="disabled" />
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            最后读数
        </i-col>
        <i-col span="6" class="RowText">
            <i-input type="number" v-model="dataParam.VALUE_LAST" v-bind:disabled="disabled" />
        </i-col>
        <i-col span="4" class="RowTitle">
            最后度数日期
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "dataParam.DATE_LAST",
                    Enable = false
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            公共区域
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumCheckBoxListRender<标记>()
                {
                    vModel = "dataParam.AREAID",
                    MultiSelect = false,
                    Enable = false
                });
            }
        </i-col><i-col span="4" class="RowTitle">
            描述
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.DESCRIPTION" v-bind:disabled="disabled" />
        </i-col>
    </row>
}

@section search{
    <row>
        <i-col span="3" class="RowTitle">
            代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.FILECODE" />
        </i-col>
        <i-col span="3" class="RowTitle">
            名称
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.FILENAME" />
        </i-col>
    </row>
}