@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum;
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase

@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            门店
        </i-col>
        <i-col span="6" class="RowText">
            <i-select v-model="searchParam.BRANCHID" v-on:on-change="branchChange">
                <i-option v-for="item in screenParam.branchData"
                          v-bind:value="item.value" v-bind:key="item.value">{{ item.label }}</i-option>
            </i-select>
        </i-col>
        <i-col span="2" class="RowTitle">
            区域
        </i-col>
        <i-col span="6" class="RowText">
            <i-select v-model="searchParam.REGIONID" v-on:on-change="regionChange">
                <i-option v-for="item in screenParam.regionData"
                          v-bind:value="item.value" v-bind:key="item.value">{{ item.label }}</i-option>
            </i-select>
        </i-col>
        <i-col span="2" class="RowTitle">
            楼层
        </i-col>
        <i-col span="6" class="RowText">
            <i-select v-model="searchParam.FLOORID" v-on:on-change="floorChange">
                <i-option v-for="item in screenParam.floorData"
                          v-bind:value="item.value" v-bind:key="item.value">{{ item.label }}</i-option>
            </i-select>
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            单元代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.CODE" />
        </i-col>
        <i-col span="2" class="RowTitle">
            单元名称
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.NAME" />
        </i-col>
        <i-col span="2" class="RowTitle">
            租赁面积
        </i-col>
        <i-col span="3" class="RowText">
            <i-input type="number" v-model="searchParam.AREA_RENTABLE_S" />
        </i-col>
        <i-col span="3" class="RowText">
            <i-input type="number" v-model="searchParam.AREA_RENTABLE_E" />
        </i-col>
    </row>
<row>
    <i-col span="2" class="RowTitle">
        单元状态
    </i-col>
    <i-col span="6" class="RowText">
        @{
            RenderControl(new EnumDropDownListRender<单元状态>()
            {
                vModel = "searchParam.STATUS",
                Enable = true
            });
        }
    </i-col>
    <i-col span="2" class="RowTitle">
        租用状态
    </i-col>
    <i-col span="6" class="RowText">
        @{
            RenderControl(new EnumDropDownListRender<租用状态>()
            {
                vModel = "searchParam.RENT_STATUS",
                Enable = true
            });
        }
    </i-col>
</row>
}