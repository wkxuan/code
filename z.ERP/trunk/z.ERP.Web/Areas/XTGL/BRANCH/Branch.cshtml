@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.DefineNew
@inherits DefineViewNewBase

@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            门店代码
        </i-col>
        <i-col span="6" class="RowText">
            <i-input type="number" v-model="searchParam.ID" />
        </i-col>
        <i-col span="2" class="RowTitle">
            门店名称
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.NAME" />
        </i-col>
        <i-col span="2" class="RowTitle">
            管理部门
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.ORGID",
                    ServiceMothod = m => m.org_hs(),
                    Enable = false
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            建筑面积
        </i-col>
        <i-col span="3" class="RowText">
            <i-input type="number" v-model="searchParam.AREA_BUILD_S" />
        </i-col>
        <i-col span="3" class="RowText">
            <i-input type="number" v-model="searchParam.AREA_BUILD_E" />
        </i-col>
        <i-col span="2" class="RowTitle">
            联系人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.CONTACT" />
        </i-col>
        <i-col span="2" class="RowTitle">
            停用标记
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<停用标记>()
                {
                    vModel = "searchParam.STATUS",
                    Enable = false
                });
            }
        </i-col>
    </row>

}

@section pops{
    <yx-modal v-bind:src="screenParam.defineDetailSrc" v-bind:title="screenParam.title"
              width="800" height="350"
              v-bind:modal-visible.sync="screenParam.showDefineDetail"></yx-modal>
}