@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Define
@inherits DefineViewBase

@section head{
    <style>
        .ivu-table-tip {
            overflow-x: hidden;
        }

        .ivu-table-overflowX {
            overflow-x: hidden;
        }

    </style>
    @InitFiles(new string[] {
        "Content/Editor/wangEditor.css",
        "Content/Editor/wangEditor.js",
})
}
@section search{
    <row>
        <i-col span="5" class="RowTitle">通知门店</i-col>
        <i-col span="6">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                });
            }
        </i-col>
        <i-col span="5" class="RowTitle">通知编号</i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.ID"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="5" class="RowTitle">通知标题</i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.TITLE"
                });
            }
        </i-col>
        <i-col span="5" class="RowTitle">通知状态</i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<通知状态>()
                {
                    vModel = "searchParam.STATUS"
                });
            }
        </i-col>
    </row>
}

@section element{

    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            通知编号
        </i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.ID",
                    Readonly = "true"
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            通知状态
        </i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<通知状态>()
                {
                    vModel = "dataParam.STATUS",
                    Enable = false
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            通知类型
        </i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<通知类型>()
                {
                    vModel = "dataParam.TYPE",
                    Enable = false
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="4" class="RowTitle">
            <span class="mustElement">*</span>
            通知标题
        </i-col>
        <i-col span="16" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.TITLE",
                    Enable = false
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="4" class="RowTitle">
            <span class="mustElement">*</span>
            通知门店
        </i-col>
        <i-col span="16" class="RowText">
            <Checkbox-Group v-model="dataParam.BRANCHID" v-on:on-change="CheckBoxChange">
                <Checkbox v-for="item in screenParam.BRANCHID" v-bind:label="item.value" v-bind:key="item.value" v-bind:disabled="disabled">
                    <span>{{item.label}}</span>
                </Checkbox>
            </Checkbox-Group>
        </i-col>
    </row>
    <row>
        <yx-editor v-bind:content="dataParam.CONTENT" v-bind:disabled="disabled" v-on:change="editorChange"></yx-editor>
    </row>

}
