@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.PopSearch;
@inherits PopSearchViewBase
@section conditionParam{
    <row>
        <i-col span="3" class="RowTitle">门店</i-col>
        <i-col span="5" class="RowText">
            <yx-select v-bind:value.sync="searchParam.BRANCHID" method="branch"></yx-select>
        </i-col>

        <i-col span="3" class="RowTitle">
            赠品编号
        </i-col>
        <i-col span="5" class="RowText">
            <i-input v-model="searchParam.ID" />
        </i-col>
        <i-col span="3" class="RowTitle">
            赠品名称
        </i-col>
        <i-col span="5" class="RowText">
            <i-input v-model="searchParam.NAME" />
        </i-col>
    </row>

    <row>
        <i-col span="3" class="RowTitle">
            价格
        </i-col>
        <i-col span="5" class="RowText">
            <i-input v-model="searchParam.PRICE" />
        </i-col>
        <i-col span="3" class="RowTitle">
            状态
        </i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<促销单状态>()
                {
                    vModel = "searchParam.STATUS"
                });
            }
        </i-col>
    </row>
}
