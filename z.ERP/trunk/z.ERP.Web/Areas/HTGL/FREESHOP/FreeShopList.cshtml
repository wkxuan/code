@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">单号</i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.BILLID" clearable/>
        </i-col>
        <i-col span="2" class="RowTitle">门店</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<普通单据状态>()
                {
                    vModel = "searchParam.STATUS",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            租约
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.CONTRACTID" clearable/>
        </i-col>        
        <i-col span="2" class="RowTitle">
            退铺日期_起
        </i-col>
        <i-col span="6" class="RowText">
            <date-picker type="date" v-model="searchParam.FREEDATE_START" clearable></date-picker>
        </i-col>
        <i-col span="2" class="RowTitle">
            退铺日期_止
        </i-col>
        <i-col span="6" class="RowText">
            <date-picker type="date" v-model="searchParam.FREEDATE_END" clearable></date-picker>
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            登记人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.REPORTER" clearable/>
        </i-col>
        <i-col span="2" class="RowTitle">
            登记时间_起
        </i-col>
        <i-col span="6" class="RowText">
            <date-picker type="datetime" v-model="searchParam.REPORTER_TIME_START" clearable></date-picker>
        </i-col>
        <i-col span="2" class="RowTitle">
            登记时间_止
        </i-col>
        <i-col span="6" class="RowText">
            <date-picker type="datetime" v-model="searchParam.REPORTER_TIME_END" clearable></date-picker>
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            审核人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="searchParam.VERIFY" clearable/>
        </i-col>
        <i-col span="2" class="RowTitle">
            审核时间_起
        </i-col>
        <i-col span="6" class="RowText">
            <date-picker type="datetime" v-model="searchParam.VERIFY_TIME_START" clearable></date-picker>
        </i-col>
        <i-col span="2" class="RowTitle">
            审核时间_止
        </i-col>
        <i-col span="6" class="RowText">
            <date-picker type="datetime" v-model="searchParam.VERIFY_TIME_END" clearable></date-picker>
        </i-col>
    </row>
}
