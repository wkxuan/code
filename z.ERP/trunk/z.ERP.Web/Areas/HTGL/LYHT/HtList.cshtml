@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="3" class="RowTitle">门店</i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch()
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            商户
        </i-col>
        <i-col span="5" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.MERCHANTNAME" v-on:on-click="SelMerchant" />
        </i-col>
        <i-col span="3" class="RowTitle">合同类型</i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<合同类型>()
                {
                    vModel = "searchParam.HTLX"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">合同号</i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.CONTRACTID"
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">资产代码</i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.SHOPDM"
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">品牌名称</i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.BRANDNAME"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">
            合同员
        </i-col>
        <i-col span="5" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.SIGNER_NAME" v-on:on-click="SelSigner" />
        </i-col>
        <i-col span="3" class="RowTitle">
            登记人
        </i-col>
        <i-col span="5" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.REPORTER_NAME" v-on:on-click="SelReporter" />
        </i-col>
        <i-col span="3" class="RowTitle">
            审核人
        </i-col>
        <i-col span="5" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.VERIFY_NAME" v-on:on-click="SelVerify" />
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">
            状态
        </i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<合同状态>()
                {
                    vModel = "searchParam.STATUS"
                });
            }
        </i-col>
    </row>
}
@section pops{
    @{
        RenderControl(new PopsRender()
        {
            vModel = "screenParam.showPopMerchant",
            Caption = "选择商户",
            Width = "900",
            Src = "screenParam.srcPopMerchant"
        });
    }
    @{
        RenderControl(new PopsRender()
        {
            vModel = "screenParam.showPopSysuser",
            Src = "screenParam.srcPopSysuser",
            Caption = "选择人员",
            Width = "800"
        });
    }
}